#post_content
    %hl= @post.title
    %p= @post.content
    
    #comments
        %h2= @post.comments.count
        = render @post.comments
        
        %h3 Reply to thread
        = render "comments/form"

    #buttons
        = link_to "Edit", edit_post_path(@post)
        = link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want do do this?"}

        = link_to "Home", root_path
